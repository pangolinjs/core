{
  "css": {
    "dev": {
      "outputStyle": "expanded",
      "precision": 10
    },
    "dist": {
      "outputStyle": "compressed",
      "precision": 10
    },
    "autoprefixer": {
      "browsers": ["> 1%"]
    }
  },

  "js": {
    "eslint": {
      "configFile": ".eslintrc.json"
    },
    "babel": {
      "presets": ["es2015"]
    }
  },

  "html": {
    "hb": {
      "bustCache": true
    },
    "browsersync": {
      "startPath": "/index.html",
      "logPrefix": "Browsersync",
      "scrollElements": ["*"],
      "notify": {
        "styles": [
          "position: fixed",
          "z-index: 9999",
          "box-sizing: border-box",
          "height: 2rem",
          "top: 0",
          "right: 2rem",
          "padding: 0 1rem",
          "font-size: 0.875rem",
          "font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;",
          "font-weight: 400",
          "text-transform: uppercase",
          "line-height: 2rem",
          "letter-spacing: 0.02em",
          "color: #fff",
          "background-color: rgb(0, 120, 255)"
        ]
      }
    }
  },

  "img": {
    "svgSpriteDev": {
      "mode": {
        "symbol": {
          "dest": "",
          "sprite": "icons.svg",
          "example": {
            "dest": "icons.html"
          }
        }
      },
      "shape": {
        "id": {
          "generator": "%s-icon"
        }
      }
    },
    "svgSpriteDist": {
      "mode": {
        "symbol": {
          "dest": "",
          "sprite": "icons.svg"
        }
      },
      "shape": {
        "id": {
          "generator": "%s-icon"
        }
      }
    },
    "imagemin": {
      "jpg": {
        "progressive": true
      },
      "png": {
        "optimizationLevel": 5
      },
      "svg": {}
    }
  }
}
